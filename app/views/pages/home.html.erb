<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.nice.fr/uploads/media/paysage/0001/24/thumb_23445_paysage_big.jpg);">
  <div class="container">
    <h1>La location de livres pour tous</h1>
    <div class="mb-3">
      <%= link_to "Commencer", books_path %>
    </div>
  </div>
</div>
<!-- Fin banner -->

<div class="container">
<!-- Top Book -->

  <div class="row">
    <h2 class="mt-2 alert-info"> Nos derniers ajouts :</h2>
    <ul>
      <% @books.each do |book| %>

      <%# card top %>
        <div class="col-sm-4 mb-1 text-center">
          <div class="card" style="width: 18rem;">
            <%= image_tag book.image_url, style:"height=300px; width=100px" %>
            <div class="card-body">
              <h5 class="card-title"> <%= book.title %> </h5>
              <p class="card-text"> <%= book.author %>, <%= book.publishing_date %> </p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"> <%= book.price %>/ day </li>
              <%# <li class="list-group-item">Dapibus ac facilisis in</li>
              <li class="list-group-item">Vestibulum at eros</li> %>
            </ul>
            <div class="card-body">
              <%# <a href="#" class="card-link">Card link</a>
              <a href="#" class="card-link">Another link</a> %>
            </div>
          </div>
        </div>
      <%# card bottom %>




        <div class="col-sm-4 mb-1 text-center">
        <div class="card" style="width: 18rem;">
            <%= image_tag book.image_url, :class => 'card-img-top rounded' %>
          <div class="card-body">
            <li><%= link_to book.title, book_path(book) %></li>
          </div>
        </div>

        </div>
      <% end %>
    </ul>
    <!-- Fin top Book -->

    <!-- Top User -->
    <h2 class="mt-3 alert-info"> Nos top utilisateurs :</h2>
    <ul>
      <% @users.each do |user| %>
        <div class="col-sm-4 mb-3">
          <li><%= user.username %></li>
        </div>
      <% end %>
    </ul>
  <!-- Fin top User -->
  </div>
</div>
