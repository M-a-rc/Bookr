<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.nice.fr/uploads/media/paysage/0001/24/thumb_23445_paysage_big.jpg);">
  <div class="container">
    <h1>La location de livres pour tous</h1>
    <div class="mb-3">
      <%= link_to "Commencer", books_path %>
    </div>
  </div>
</div>
<!-- Fin banner -->

<div class="container">
  <!-- Top Book -->
  <h2 class="mt-2 alert-info"> Nos derniers ajouts :</h2>
  <div class="row">
    <% @books.each do |book| %>
      <%# card top %>
      <div class="col-md-3">
        <%= link_to book_path(book) do %>
          <div class="my-card mb-3" style="width: 18rem;">
            <div class ="my-card-upper-image" style="background-image: url(<%= image_path book.image_url %>); background-size: contain; background-position: center; background-repeat: no-repeat">
            </div>
            <hr>
            <div class="card-body">
              <h5><%= book.title %></h5>
              <p> <%= book.author %>, <%= book.publishing_date.year %> </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <%# card bottom %>
  </div>

  <!-- Top User -->
  <h2 class="mt-3 alert-info"> Nos top utilisateurs :</h2>
  <ul>
    <% @users.each do |user| %>
      <div class="col-sm-4 mb-3">
        <li><%= user.username %></li>
      </div>
    <% end %>
  </ul>
  <!-- Fin top User -->

</div>
