<div class="container">

  <h2>Index Book</h2>

      <div class="search mb-3">
        <%= form_tag books_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a book"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>

<div class="container">
  <div class="mb-3">
    <!-- user -->
    <% if !current_user.nil? %>
      <%= link_to 'Ajouter un livre', new_book_path, class:"btn btn-success" %>
    <% end %>
    <!-- Fin user -->
  </div>
  <div class="row">

    <div class="col-md-6">
      <div class="row">
        <% @books.each do |book| %>

          <div class="col-md-6">
            <div class="card mb-3" style="width: 18rem;">
              <%= link_to "",book_path(book),class: "card-click"  %>
              <%= image_tag book.image_url, class: 'card-img-top img-thumbnail rounded' %>
              <div class="card-body">
                <p class="card-text"><%= book.title %></p>
              </div>
            </div>
          </div>

        <% end %>
      </div>

    </div>

    <div class="col-md-6">
      <div id="map" style="width: 100%;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" ></div>
    </div>

  </div>
</div>
</div>
