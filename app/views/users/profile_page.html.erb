<%# navbar %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="container-fluid">

      <%= link_to root_path do  %>
        <img src="<%= asset_path('logo.png') %>" alt="logo" id="logo">
      <% end %>

      <div>
        <%= form_tag books_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-inline",
            placeholder: "Find a book"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
            <li class="nav-item dropdown">
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= asset_path('account.png') %>" />
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= user_signed_in? ? (link_to "Sign out", destroy_user_session_path, method: :delete, class:"dropdown-item") : (link_to "Sign in", new_user_session_path, class:"dropdown-item")  %>
                <%= link_to "My Account", profilepage_path, class:"dropdown-item"  %>
              </div>
            </li>
            <!--li class="nav-item"-->
            <!--/li-->
        </ul>
      </div>
    </div>
  </div>
<%# fin-navbar %>


<div class="container">
  <h2>Welcome back, <%= current_user.username %></h2>

  <div class="container">

    <div class="row">
      <h3>Your books</h3>
      <% @books.each do |book| %>
        <div class="col-md-3">
          <%= link_to book_path(book) do %>
            <div class="my-card mb-3">
              <div class ="my-card-upper-image" style="background-image: url(<%= image_path book.image_url %>); background-size: contain; background-position: center; background-repeat: no-repeat">
              </div>
              <hr>
              <div class="card-body">
                <h5><%= book.title %></h5>
                <p> <%= book.author %>, <%= book.publishing_date.year %> </p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <br>
    <hr>
    <br>


    <div class="row">
      <h3>Your orders</h3>
      <% @orders.each do |order| %>
        <div class="col-md-4 card-order">
          <div class="card-order-infos">
            <h2> Title: <%= order.book.title %> </h2>
            <p> Renter: <%= order.user.username %></p>
            <p> Message: <%= order.message %></p>
            <p> Date: <%= order.starting_date %> --> <%= order.ending_date %></p>
            <p>Status: <%= order.status %></p>

            <% Order::STATUSES.each do |status| %>
              <%= link_to change_status_order_path(order, status: status), method: :patch do %>
                <%= status %>
              <% end %>
            <% end %>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
